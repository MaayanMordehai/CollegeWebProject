@model DGN.Models.User

@{
    ViewData["Title"] = "AccessDenied";
}

<div class="container">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">UnAuthorized!</h4>
        <p>Owww sorry, but it seems that you are unauthorized to access this page.</p>
        <hr>
        <a class="mb-0" asp-action="Logout">Click here to signin using a different user</a>
    </div>
</div>