                        <div class="col-sm-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(model => model.Firstname)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input class="form-control" asp-for="Firstname">
                            <span asp-validation-for="Firstname" class="text-danger"></span>
